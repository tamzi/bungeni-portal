<toolbar>
    <root lang="en" title="Editor Actions" visible="true" >
        <actionGroup name="blockActions" title="Block Actions" visible="true">
            <blockAction name="Root" title="Create Root Section" visible="true" condition="sectionNotExists:root" target="generalAction.createRootSection" />
            <blockAction name="MastHead" tooltip="Use these actions to create and manage the Masthead" title="MastHead" target="null" visible="true" condition="none" >
                <action name="MastHead.new" title="New" mode="TEXT_INSERTION" target="toolbarAction.makePrayerSection" visible="true" condition="sectionNotExists:MastHead :and: textSelected:false" />
                <action name="MastHead.selection" tooltip="Select some text in the document to mark it up as a MastHead." title="From Selection" mode="TEXT_SELECTED_INSERT" target="toolbarSubAction.makePrayerSection.section_creation" visible="true" condition="sectionNotExists:masthead :and: textSelected:true" showChildren="true" >
                    <subaction name="Masthead.selection.date" tooltip="Select some text to mark it up as a 'Document Date'" title="Markup Date" mode="TEXT_SELECTED_INSERT" target="toolbarSubAction.makePrayerSection.debatedate_entry" visible="true" condition="cursorInSection:masthead :and: textSelected:true" />
                    <subaction name="Masthead.selection.time" tooltip="Select some text to mark it up as 'Document Time'" title="Markup Time" mode="TEXT_SELECTED_INSERT" target="toolbarSubAction.makePrayerSection.debatetime_entry" visible="true" condition="cursorInSection:masthead :and: textSelected:true" />
                </action>
                 <action name="MastHead.edit" title="Edit Metadata" mode="TEXT_EDIT" target="toolbarAction.makePrayerSection" visible="false" />                
            </blockAction>
            <blockAction name="Papers" title="Papers" target="null" visible="true" >
                <action name="Papers.new" title="New" mode="TEXT_INSERTION" target="toolbarAction.makePaperSection" visible="true" />
                <action name="Papers.selection" title="Create From Selection" mode="TEXT_SELECTED_INSERT" target="toolbarAction.makerPrayerSection" visible="true" />
            </blockAction>
        </actionGroup>
    </root>
</toolbar>
