<metal:block define-macro="page">
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xml:lang="en"
      lang="en"
      i18n:domain="bungeni">
  <head>
    <metal:block define-slot="title">
      <title tal:content="string:Bungeni">Z3 UI</title>
    </metal:block>         

    <tal:block tal:replace="structure provider:bungeni-css">
      CS Includes, Dynamically Included by Context 
    </tal:block>

    <tal:block tal:replace="structure provider:bungeni-js">
      JS Includes, Dynamically Included by Context 
    </tal:block>

    <meta http-equiv="Content-Type"
          content="text/html;charset=utf-8" />
  </head>

<body>
  <div id="visual-portal-wrapper">

    <div id="portal-top">
      <h5 class="hiddenStructure" i18n:translate="heading_sections">Sections</h5>

      <div id="portal-header">
          <ul id="portal-globalnav">
              <li class="plain"><a href="/">Home</a></li>
              <li class="plain"><a href="/parliament">Parliament</a></li>                
              <li class="plain"><a href="/motions">Motions</a></li>        
              <li class="plain"><a href="/bills">Bills</a></li>                
              <li class="plain"><a href="/committees">Committees</a></li>
          </ul>      
      </div>

      <tal:block replace="structure provider:bungeni.portalheader" />
    </div>

    <div class="visualClear" id="clear-space-before-wrapper-table"><!-- --></div>      
    
      <table id="portal-columns">
        <tbody>
          <tr>
            <tal:comment replace="nothing"> Start of the left column </tal:comment>
            <td id="portal-column-one">
              <div class="visualPadding">
                  <tal:block replace="structure provider:bungeni.leftcolumn" />
                &nbsp;
              </div>
            </td>

            <tal:comment replace="nothing"> End of the left column </tal:comment>
            <tal:comment replace="nothing"> Start of main content block </tal:comment>

            <td id="portal-column-content">

              <metal:block define-slot="content">
                <div class="documentEditable">

                  <div tal:replace="structure provider:bungeni.contentviews" />

                  <div id="region-content"
                       class="documentContent">

                    <span id="contentTopLeft"></span>
                    <span id="contentTopRight"></span>
                    
                    <a name="documentContent"></a>

                    <div id="viewlet-above-content" tal:content="structure provider:bungeni.abovecontent" />

                    <metal:slot metal:define-slot="body">
                    <tal:comment replace="nothing">
                        The div with ID #content will only show up if we're actually on a content
                        view, never on edit forms, control panels etc. It's meant to only wrap the
                        actual content that gets rendered on a page, not the other UI elements.
                    </tal:comment>
		    
		    <!--
                    <div id="content"
                         tal:omit-tag="not:context/@@plone_context_state/is_view_template">
                      <metal:header metal:define-slot="header" tal:content="nothing">
                        Visual Header
                      </metal:header>
                      <metal:bodytext metal:define-slot="main" tal:content="nothing">
                        Page body text
                      </metal:bodytext>
                    </div>
		    -->

                    </metal:slot>

                      <div tal:replace="structure provider:bungeni.belowcontent" />
                    
                    <span id="contentBottomLeft"></span>
                    <span id="contentBottomRight"></span>

                  </div>

                </div>

              </metal:block>
            </td>
            <tal:comment replace="nothing"> End of main content block </tal:comment>

            <tal:comment replace="nothing"> Start of right column </tal:comment>
            <td id="portal-column-two">
              <div class="visualPadding">
                  <tal:block replace="structure provider:bungeni.rightcolumn" />
                &nbsp;
              </div>
            </td>
            <tal:comment replace="nothing"> End of the right column </tal:comment>
          </tr>
        </tbody>
      </table>
      <tal:comment replace="nothing"> end column wrapper </tal:comment>

      <div class="visualClear" id="clear-space-before-footer"><!-- --></div>
      
      <metal:block>

        <div tal:replace="structure provider:bungeni.portalfooter" />

      </metal:block>

      <div class="visualClear"><!-- --></div>
    </div>

</body>
</html>
</metal:block>
