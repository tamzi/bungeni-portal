<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="context/@@standard_macros/page">

  <div metal:fill-slot="body" i18n:domain="bungeni">
    
    <h1>  <span tal:replace="view/title" /> for: <span tal:replace="view/group/short_name"/> </h1>
    <a tal:attributes="href view/back_link"> back to calendar </a>
    <dl>
      <tal:loop tal:repeat="item view/sitting_items">
        <dt> <h2><span tal:content="item/sitting_type/sitting_type" />: 
                <span tal:content="item/start_date" /> - 
                <span tal:content="item/end_date" /> 
        </h2></dt>
        <tal:loop tal:repeat="scheduled item/item_schedule">
          <dt tal:content="scheduled/category/short_name | nothing" tal:condition="scheduled/category" />
          <dd >
            <h2 tal:content="scheduled/item/short_name" />
            <p tal:content="structure scheduled/item/body_text" />   
            <p tal:content="structure scheduled/discussion/body_text" tal:condition="view/display_minutes" />                               
          </dd>
        </tal:loop>          
      </tal:loop>
    </dl>
    <a tal:attributes="href view/back_link"> back to calendar </a>
  </div>
  
</html>  
