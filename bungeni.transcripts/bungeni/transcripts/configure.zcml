<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:browser="http://namespaces.zope.org/browser"
    xmlns:db="http://namespaces.objectrealms.net/rdb">
    <!-- Bind Application Model to Database -->
    <include package="zope.app.zcmlfiles" />

    <include package="ore.alchemist" file="meta.zcml" />
    <include package="ore.alchemist" />  
    <include package="alchemist.catalyst" file="meta.zcml" />
    <include package="alchemist.ui" />

    <include package="bungeni.core" />
    <include package=".browser" />
    <db:bind
     engine="bungeni-db"
     metadata=".schema.metadata" />
     
    <browser:page
      for=".interfaces.ITranscribable"
      name="transcripts"
      class=".browser.browser.MainView"
      permission="zope.View"
      template="browser/main_page.pt"
      />
      <browser:page
      for=".interfaces.ITranscribable"
      name="main_transcripts"
      class=".browser.browser.MainView"
      permission="zope.View"
      template="browser/main.pt"
      />
      <browser:page
      for=".interfaces.ITranscribable"
      name="add"
      class=".browser.browser.Add"
      permission="zope.View"
      />
      
    <browser:menuItem
     menu="context_actions"
     for=".interfaces.ITranscribable"
     action="transcripts"
     title="Transcripts"
     /> 
    
</configure>
