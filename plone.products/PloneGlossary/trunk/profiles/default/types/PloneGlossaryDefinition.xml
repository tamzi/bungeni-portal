<?xml version="1.0"?>
<object name="PloneGlossaryDefinition"
   meta_type="Factory-based Type Information with dynamic views"
   i18n:domain="ploneglossary"
   xmlns:i18n="http://xml.zope.org/namespaces/i18n">
 <property name="title" i18n:translate="">Glossary definition</property>
 <property name="description"
    i18n:translate="">PloneGlossary definition</property>
 <property name="content_icon">ploneglossarydefinition_icon.gif</property>
 <property name="content_meta_type">PloneGlossaryDefinition</property>
 <property name="product">PloneGlossary</property>
 <property name="factory">addPloneGlossaryDefinition</property>
 <property name="immediate_view">ploneglossarydefinition_view</property>
 <property name="global_allow">False</property>
 <property name="filter_content_types">False</property>
 <property name="allowed_content_types"/>
 <property name="allow_discussion">False</property>
 <property name="default_view">ploneglossarydefinition_view</property>
 <property name="view_methods">
  <element value="ploneglossarydefinition_view"/>
 </property>
 <property name="default_view_fallback">False</property>
 <alias from="(Default)" to="ploneglossarydefinition_view"/>
 <alias from="edit" to="base_edit"/>
 <alias from="index.html" to="(Default)"/>
 <alias from="properties" to="base_metadata"/>
 <alias from="sharing" to="@@sharing"/>
 <alias from="view" to="(Default)"/>
 <action title="View" action_id="view" category="object" condition_expr=""
    url_expr="string:${object_url}" visible="True">
  <permission value="View"/>
 </action>
 <action title="Edit" action_id="edit" category="object"
    condition_expr="not:object/@@plone_lock_info/is_locked_for_current_user|python:True"
    url_expr="string:${object_url}/edit" visible="True">
  <permission value="Modify portal content"/>
 </action>
 <action title="References" action_id="references" category="object"
    condition_expr="object/archetype_tool/has_graphviz"
    url_expr="string:${object_url}/reference_graph" visible="True">
  <permission value="Modify portal content"/>
 </action>
</object>
