<div id="portal-search" i18n:domain="bungeni">
    <form tal:attributes="action view/action_url"
        method="get" id="search-form" class="section-form">
        <p>
            <input class="textType" id="form.search" name="form.search"
                size="20" type="text" value=""/>
            <input type="submit" class="context" id="form.actions.execute-search"
                name="form.actions.execute-search" 
                i18n:attributes="value" value="Search"/>
            <a tal:attributes="href string:${view/action_url}?advanced=true"
                tal:condition="view/show_advanced_link"
                i18n:translate="">advanced search</a>
        </p>
    </form>
</div>
